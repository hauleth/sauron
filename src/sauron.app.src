{application, sauron, [
    {description, "Monitor Erlang VM for system events"},
    {vsn, git},
    {registered, []},
    {mod, {sauron_app, []}},
    {applications, [
        kernel,
        stdlib,
        telemetry
    ]},
    {env, [
        {monitor, [
            {long_gc, 250},
            {long_message_queue, {50, 500}},
            {long_schedule, 100},
            % 8 MiB on 64 bit platforms
            {large_heap, 1048576},
            {busy_port, true},
            {busy_dist_port, true}
        ]}
    ]},
    {modules, []},
    {licenses, ["Apache-2.0"]},
    {links, []}
]}.
